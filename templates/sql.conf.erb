# Gestion des logs#################
SqlLogFile /var/log/proftpd/sql.log
# Enregistre les authentifications
LogFormat auth "%v [%P] %h %t \"%r\" %s"
ExtendedLog /var/log/proftpd/auth.log AUTH auth


